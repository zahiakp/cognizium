{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true, // Keep this if you want to allow JavaScript files
    "skipLibCheck": true, // Skips type checking of declaration files
    "strict": true, // Enable all strict type-checking options for better type safety
    "noEmit": true, // Prevents emitting output files
    "incremental": true, // Enables incremental compilation
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Use the latest module system
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Ensures that each file can be safely transpiled independently
    "jsx": "preserve", // Keep JSX as-is for Next.js to handle
    "plugins": [
      {
        "name": "next" // Next.js plugin for TypeScript support
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Next.js environment types
    ".next/types/**/*.ts", // Types generated by Next.js
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx" // Include all TypeScript files with JSX
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}